<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/downloaded_activity_rl"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/downloaded_file_default_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/downloaded_file_image_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/downloaded_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/downloaded_activity_rl"
            android:text="Default Text"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <View
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGrey"/>

</LinearLayout>