<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/comment_video_activity_fl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/initial_comment_username_tv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/merriweather_bold"
            />

    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username_video_activity_rv_list_item_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/body_video_activity_rv_list_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/heebo"
            android:textColor="@color/black"
            />

    </LinearLayout>

        <TextView
            android:id="@+id/timestamp_video_activity_rv_list_item_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:layout_weight="0.3"/>

    </LinearLayout>



